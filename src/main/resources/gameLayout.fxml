<?import com.comp2042.GameOverPanel?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<Pane fx:controller="com.comp2042.GuiController"
      xmlns:fx="http://javafx.com/fxml">
    <GridPane fx:id="brickPanel" vgap="1" hgap="1"/>
    <BorderPane styleClass="gameBoard" fx:id="gameBoard">
        <center>
            <GridPane fx:id="gamePanel" hgap="1" vgap="1" layoutY="30" layoutX="40"/>
        </center>
    </BorderPane>

    <Group fx:id="groupNotification" layoutX="14" layoutY="203">
        <VBox alignment="CENTER">
            <GameOverPanel fx:id="gameOverPanel"/>
        </VBox>
    </Group>
    
    <ToggleButton fx:id="pauseButton" text="Pause" layoutX="260" layoutY="10" 
                  onAction="#pauseGame" styleClass="pause-button"/>
    
    <Button fx:id="easyButton" text="Easy" layoutX="260" layoutY="45" 
            onAction="#setEasyDifficulty" styleClass="difficulty-button"/>
    
    <Button fx:id="normalButton" text="Normal" layoutX="260" layoutY="75" 
            onAction="#setNormalDifficulty" styleClass="difficulty-button"/>
    
    <Button fx:id="hardButton" text="Hard" layoutX="260" layoutY="105" 
            onAction="#setHardDifficulty" styleClass="difficulty-button"/>
    
    <Label fx:id="scoreLabel" text="0" layoutX="20" layoutY="10" 
           styleClass="scoreClass"/>
    
    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</Pane>